{
  "version": "1.0.0-*",
  "description": "NupkgWrench is a cross platform command line tool to read and modify nupkgs.",
  "authors": [ "emgarten" ],
  "packOptions": {
    "projectUrl": "https://github.com/emgarten/NupkgWrench",
    "tags": [
      "nupkg",
      "nuget-powertool"
    ],
    "licenseUrl": "https://github.com/emgarten/NupkgWrench/blob/master/LICENSE.md",
    "repository": {
      "type": "git",
      "url": "https://github.com/emgarten/NupkgWrench"
    },
    "files": {
      "mappings": {
        "tools/": "../../artifacts/NupkgWrench.exe"
      }
    }
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "warningsAsErrors": true
  },

  "dependencies": {
    "NuGet.Packaging": "3.5.0-rc1-1709",
    "Microsoft.Extensions.CommandLineUtils": "1.0.0"
  },

  "frameworks": {
    "net451": {
      "frameworkAssemblies": {
        "System.IO.Compression": "4.0.0.0"
      },
      "dependencies": {
      },
      "buildOptions": {
        "define": [
          "IS_DESKTOP"
        ]
      }
    },
    "netcoreapp1.0": {
      "buildOptions": {
        "define": [
          "IS_CORECLR"
        ]
      },
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        },
        "System.Runtime.Serialization.Primitives": "4.1.1",
        "System.Xml.XmlSerializer": "4.0.11"
      }
    }
  }
}
